<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/home_page_margin"
        android:layout_marginLeft="@dimen/home_page_margin"
        android:layout_marginBottom="@dimen/home_page_margin"
        android:layout_marginRight="@dimen/home_page_margin"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image_head_home_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/head" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:format24Hour="yyyy 年 MM 月 dd 日"
                android:textSize="@dimen/text_size_normal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/home_page_margin"
                android:orientation="horizontal">

                <TextClock
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/home_page_margin_small"
                    android:format24Hour="EEE"
                    android:textSize="@dimen/text_size_normal" />

                <TextClock
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/home_page_margin_small"
                    android:format24Hour="a"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_size_normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/home_page_margin"
                android:orientation="horizontal">

                <TextClock
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/home_page_margin_small"
                    android:format24Hour="h:mm"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_size_large" />

                <TextClock
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/home_page_margin_small"
                    android:format24Hour="ss"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_size_normal" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    
    <Button 
        android:id="@+id/button_home_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/home_page_margin_large"
        android:layout_marginBottom="@dimen/home_page_margin_large"
        android:layout_marginLeft="@dimen/home_page_margin"
        android:layout_marginRight="@dimen/home_page_margin"
        android:background="@drawable/button_sign"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/home_page_margin_large"
        android:layout_marginLeft="@dimen/home_page_margin"
        android:layout_marginRight="@dimen/home_page_margin"
        android:orientation="vertical" >
        
        <TextView 
            android:id="@+id/sign_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="签到时间"/>
        
        <TextView 
            android:id="@+id/sign_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_page_margin_small"
            android:gravity="center"
            android:text="签到地点"/>
        
        <TextView 
            android:id="@+id/current_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_page_margin_small"
            android:gravity="center"
            android:text="当前地点"/>
        
    </LinearLayout>

</LinearLayout>
